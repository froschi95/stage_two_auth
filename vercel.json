{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "manage.py"
    }
  ],
  "build": {
    "env": {
      "DJANGO_SECRET_KEY": "@django-secret-key",
      "DB_NAME": "@db-name",
      "DB_USER": "@db-user",
      "DB_PASSWORD": "@db-password",
      "DB_HOST": "@db-host"
    }
  }
}
